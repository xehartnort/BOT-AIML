<!-- ACTUALIZA LA LISTA GLOBAL DE PERSONAJES Y DECIDE SI SEGUIR PREGUNTANDO RASGOS O DECIR UN PERSONAJE-->
<category>
  <pattern>
    PENSAR *
  </pattern>
  <template>
      <think>
      <srai>
        UPDATE_GLOBAL_LIST <star/>
      </srai>
      <srai>
        DEDUCIR PERSONAJE
      </srai>
      </think>
      <condition name="candidato">
        <li value="trampa">
          <srai> TRAMPOSO </srai>
        </li>
        <li value="unknown">
          tiene barba
        </li>
        <li>
          <think>
          <set name="Posicion_actual">EL PERSONAJE ES <get name="candidato"/></set>
          </think>
          EL PERSONAJE ES <get name="candidato"/>
        </li>
      </condition>
  </template>  
</category>

