<!-- FUNCION QUE INICIALIZA Y INTERSECA LA LISTA GLOBAL DE CANDIDATOS CON LA LISTA PROPORCIONADA <STAR/>-->
<category>
  <pattern>
    UPDATE_GLOBAL_LIST *
  </pattern>
  <template>
    <think>
    <set var="lista_local"><star/></set>
    <condition name="lista_global">
      <li value="unknown">
        <set name="lista_global"><get var="lista_local"/></set>
      </li>
      <li>
        <set var="lista2"><get name="lista_global"/></set>
        <set name="lista_global">
          <srai>
            INTERSEC <get var="lista_local"/> AND <get var="lista2"/> 
          </srai>
        </set>
      </li>
    </condition>
    </think>
  </template>
</category>

<!-- DECIDE SI EN LA INFORMACIÓN DE LA LISTA GLOBAL HAY UN PERSONAJE CANDIDATO-->
<category>
  <pattern>
    DEDUCIR PERSONAJE
  </pattern>
  <template>
    <set var="tamanio">
      <srai>
        COUNT <get name="lista_global"/>
      </srai>
    </set>
    <condition var="tamanio">
      <li value="0">
        <set name="candidato">trampa</set>
      </li>
      <li value="1">
        <set name="candidato"><get name="lista_global"/></set>
      </li>
      <li value="2">
        <set name="candidato">
          <srai>
            TOP <get name="lista_global"/>
          </srai>
        </set>
        <set name="candidato_alternativo">
          <srai>
            REMAIN <get name="lista_global"/>
          </srai>
        </set>
      </li>
    </condition>
  </template>
</category>

